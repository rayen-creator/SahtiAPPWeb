{% extends 'base-back.html.twig' %}

{% block title %} {% endblock %}

{% block body %}
    <style>
        img {
            border-radius: 50%;
        }
    </style>
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Edit your account
            <img src="{{ asset('images/iconuser.png') }}  " height="40px" width="4%"  />

        </h4>

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
{#                        <h5 class="mb-0">Edit your account</h5>#}
{#                        <small class="text-muted float-end">Default label</small>#}
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <a href="/profile" class="btn btn-info"> Go back </a><br>

                        </div>
                        {% for flashMessage in app.session.flashbag.get('alert5') %}
                            <div class="alert alert-danger">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}

                        {{ form_start(f , {'attr': {'novalidate':'novalidate'}}) }}
                            <div class="mb-3">
                                {{ form_widget(f.nom , { 'attr': {'class': 'form-control' }}) }}
                                {% for flashMessage in app.session.flashbag.get('alert1') %}
                                    <div class="alert alert-success">
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="mb-3">
                                {{ form_widget(f.prenom , { 'attr': {'class': 'form-control' }}) }}
                                {% for flashMessage in app.session.flashbag.get('alert2') %}
                                    <div class="alert alert-success">
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="mb-3">
                                {{ form_widget(f.passwd , { 'attr': {'class': 'form-control' }}) }}
                                {% for flashMessage in app.session.flashbag.get('alert3') %}
                                    <div class="alert alert-success">
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="mb-3">
                                {{ form_widget(f.confirmpasswd , { 'attr': {'class': 'form-control' }}) }}
                                {% for flashMessage in app.session.flashbag.get('alert4') %}
                                <div class="alert alert-danger">
                                    {{ flashMessage }}
                                </div>
                                {% endfor %}
                            </div>
                        <div class="mb-3">
                            <label class="form-label" >Profile Picture</label>
                            {{ form_widget(f.img , { 'attr': {'class': 'form-control' }}) }}
                            {% for flashMessage in app.session.flashbag.get('alert6') %}
                                <div class="alert alert-success">
                                    {{ flashMessage }}
                                </div>
                            {% endfor %}
                        </div>
                        {{ form_widget(f.Save , { 'attr': {'class': 'btn btn-primary ' }}) }}
                        {{ form_end(f)}}
                    </div>
                </div>
            </div>
            <div class="col-xl">
                <img src="{{ asset('images/editprofile.png') }} "  height="450px" width="80%" />


            </div>
        </div>
    </div>

{% endblock %}
